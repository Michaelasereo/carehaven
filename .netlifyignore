.next/cache/**
.next/trace
.next/logs
.next/analytics
.next/diagnostics
.next/types/**
.next/fallback-build-manifest.json

# Standalone output (huge node_modules duplication - not needed for Netlify)
.next/standalone/**

# Source maps (optional - remove for smaller deploys)
.next/**/*.map

# Development files
.next/**/*.log
.next/**/*.tsbuildinfo
.next/**/.rscinfo
.next/**/.previewinfo

